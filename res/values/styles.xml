<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- background app -->
    <style name="background_thankyou">
        <item name="android:background">@drawable/bg</item>
        <item name="android:padding">0dp</item>
    </style>
     <style name="background_thankyou_cars">
        <item name="android:src">@drawable/bgautos</item>
       
    </style>
    <style name="background_thankyou_logo">
        <item name="android:src">@drawable/logo</item>
       
    </style>
    <style name="background_thankyou_header">
        <item name="android:padding">2dp</item>      
    </style>
     <style name="background_thankyou_subheader">
        <item name="android:background">#F2F2F2</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:padding">8dp</item>
        
    </style>
    <style name="background_thankyou_text_white">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="background_btn_blue">
        <item name="android:background">#23A8CC</item>  
        <item name="android:padding">4dp</item> 
        <item name="android:textColor">#FFFFFF</item> 
        <item name="android:textSize">10dp</item>     
    </style>
     <style name="background_btn_blue2">
        <item name="android:background">#23A8CC</item> 
        <item name="android:padding">2dp</item>     
    </style>
</resources>